<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_body"
    tools:context="com.thangld.managechildren.main.NetworkErrorFragment">

    <LinearLayout
        android:id="@+id/layout_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/icon_notification"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/no_connection" />

        <TextView
            android:id="@+id/content_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_notification"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/no_internet"
            android:textColor="@color/text_hint"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/option_account_selector"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/re_try"
            android:textColor="@color/background_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/btn_retry"/>

    </LinearLayout>


</FrameLayout>
