<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thangld.managechildren.main.child.ChildFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:backgroundTint="@color/background_color"
        android:src="@drawable/add"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal" />

    <ListView
        android:id="@+id/lv_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"></ListView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/introduce_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_notification"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/child_dim_grey" />

        <TextView
            android:id="@+id/notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_notification"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="@string/add_child"
            android:textColor="@color/text_hint"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout
>
</FrameLayout>

